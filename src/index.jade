doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    link(rel='stylesheet', href="assets/stylesheets/index.css")
    script(src='/assets/scripts/all.min.js')
    script(src='/assets/scripts/index.js')
    title Edit Patterns
  body#index
    .container.pattern
      input.title(
        type='text'
        name='title'
        placeholder='title'
      )
    
      ul.scenes
        li.scene
          .left
            //- TODO: change form interactively
            img.status(src="assets/images/pattern.png")/
          .right
            ul.icons
              - for(var i=0; i<5; i++)
                li.icon
                  img(src="assets/images/icon_#{i}.png")/
            
            - for(var i=0; i<5; i++)
              - make_url = "/some_url_here"
              form(action="#{make_url}", method="post")
                ul(class="layer, layer-#{i}")
                  - for(var j=0; j<5; j++)
                    - if(j == 0)
                      li.btn.checked
                        input(type="radio", name="position_#{i}", value="#{j}" class="position" checked)
                    - else
                      li.btn
                        input(type="radio", name="position_#{i}", value="#{j}" class="position")
                input(type="submit" class="submit")
                  
      .add-btn add
        
